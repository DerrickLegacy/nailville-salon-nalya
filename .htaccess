<IfModule mod_rewrite.c>
RewriteEngine On

# Map common asset directories to /public/
RewriteCond %{REQUEST_URI} ^/(build|css|js|images|fonts)/
RewriteRule ^(.*)$ public/$1 [L]

# Send everything else to Laravel inside /public
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ public/index.php [L]
</IfModule>
